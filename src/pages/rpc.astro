---
// RPC Status Page - Like ChainList for JIBCHAIN
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
import { JIBCHAIN_RPC_ENDPOINTS } from '../utils/blockchain-constants';
import '../styles/global.css';

const rpcEndpoints = JIBCHAIN_RPC_ENDPOINTS;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`RPC Status | ${SITE_TITLE}`} description="JIBCHAIN L1 RPC endpoint status and latency monitor" />
    <style>
      .rpc-card {
        transition: all 0.3s ease;
      }
      .rpc-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
      }
      .status-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        animation: pulse 2s infinite;
      }
      .status-online {
        background-color: #22c55e;
        box-shadow: 0 0 8px #22c55e;
      }
      .status-slow {
        background-color: #eab308;
        box-shadow: 0 0 8px #eab308;
      }
      .status-offline {
        background-color: #ef4444;
        box-shadow: 0 0 8px #ef4444;
      }
      .status-checking {
        background-color: #6b7280;
        animation: blink 1s infinite;
      }
      @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.7; }
      }
      @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.3; }
      }
      .latency-bar {
        height: 8px;
        border-radius: 4px;
        background: linear-gradient(90deg, #22c55e 0%, #eab308 50%, #ef4444 100%);
        transition: width 0.5s ease;
      }
      .refresh-spin {
        animation: spin 1s linear infinite;
      }
      @keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
      }
    </style>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <Header />

    <main class="max-w-4xl mx-auto px-4 py-8">
      <!-- Header -->
      <div class="text-center mb-8">
        <div class="inline-flex items-center gap-3 mb-4">
          <img src="/floodboy-logo.png" alt="FloodBoy" class="w-12 h-12" />
          <h1 class="text-3xl font-bold text-gray-900">JIBCHAIN L1 RPC Status</h1>
        </div>
        <p class="text-gray-600">Real-time RPC endpoint monitoring for FloodBoy IoT blockchain</p>
      </div>

      <!-- Chain Info Card -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
        <div class="flex items-center justify-between flex-wrap gap-4">
          <div class="flex items-center gap-4">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center">
              <span class="text-white text-2xl font-bold">JBC</span>
            </div>
            <div>
              <h2 class="text-xl font-bold text-gray-900">JIBCHAIN L1</h2>
              <div class="flex items-center gap-4 text-sm text-gray-600 mt-1">
                <span><strong>Chain ID:</strong> 8899 (0x22c3)</span>
                <span><strong>Currency:</strong> JBC</span>
              </div>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <button id="refresh-btn" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition flex items-center gap-2">
              <svg id="refresh-icon" class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
              Refresh
            </button>
            <a href="https://exp.jibchain.net" target="_blank" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition">
              Explorer
            </a>
          </div>
        </div>
      </div>

      <!-- Stats Summary -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 text-center">
          <div id="stat-online" class="text-2xl font-bold text-green-600">-</div>
          <div class="text-sm text-gray-600">Online</div>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 text-center">
          <div id="stat-block" class="text-2xl font-bold text-blue-600">-</div>
          <div class="text-sm text-gray-600">Block Height</div>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 text-center">
          <div id="stat-fastest" class="text-2xl font-bold text-purple-600">-</div>
          <div class="text-sm text-gray-600">Fastest</div>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 text-center">
          <div id="stat-avg" class="text-2xl font-bold text-gray-600">-</div>
          <div class="text-sm text-gray-600">Avg Latency</div>
        </div>
      </div>

      <!-- RPC List -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
          <h3 class="font-semibold text-gray-900">RPC Endpoints</h3>
          <div class="flex items-center gap-2 text-sm text-gray-500">
            <span>Auto-refresh:</span>
            <label class="relative inline-flex items-center cursor-pointer">
              <input type="checkbox" id="auto-refresh" class="sr-only peer" checked>
              <div class="w-9 h-5 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-blue-600"></div>
            </label>
          </div>
        </div>

        <!-- Table Header -->
        <div class="grid grid-cols-12 gap-4 px-6 py-3 bg-gray-50 text-sm font-medium text-gray-500 border-b">
          <div class="col-span-5">RPC Server Address</div>
          <div class="col-span-2 text-center">Height</div>
          <div class="col-span-2 text-center">Latency</div>
          <div class="col-span-2 text-center">Status</div>
          <div class="col-span-1 text-center">Score</div>
        </div>

        <!-- RPC Rows -->
        <div id="rpc-list">
          {rpcEndpoints.map((endpoint, index) => (
            <div class="rpc-card grid grid-cols-12 gap-4 px-6 py-4 border-b border-gray-100 items-center hover:bg-gray-50" data-endpoint={endpoint}>
              <div class="col-span-5">
                <div class="flex items-center gap-3">
                  <div class="status-dot status-checking" data-status-dot={index}></div>
                  <div>
                    <code class="text-sm text-gray-900 font-mono">{endpoint}</code>
                    <div class="text-xs text-gray-500 mt-1" data-provider={index}>Checking...</div>
                  </div>
                </div>
              </div>
              <div class="col-span-2 text-center">
                <span class="font-mono text-gray-700" data-height={index}>-</span>
              </div>
              <div class="col-span-2 text-center">
                <span class="font-mono" data-latency={index}>-</span>
              </div>
              <div class="col-span-2 text-center">
                <span class="px-2 py-1 rounded-full text-xs font-medium" data-status-badge={index}>Checking</span>
              </div>
              <div class="col-span-1 text-center">
                <span class="font-bold" data-score={index}>-</span>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Legend -->
      <div class="mt-6 flex items-center justify-center gap-6 text-sm text-gray-600">
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 rounded-full bg-green-500"></div>
          <span>&lt; 200ms</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
          <span>200-500ms</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 rounded-full bg-red-500"></div>
          <span>&gt; 500ms / Offline</span>
        </div>
      </div>

      <!-- Info -->
      <div class="mt-8 bg-blue-50 border border-blue-200 rounded-xl p-6">
        <h4 class="font-semibold text-blue-900 mb-2">About RPC Speed Detection</h4>
        <p class="text-blue-800 text-sm">
          FloodBoy uses intelligent RPC selection to ensure reliable blockchain connectivity.
          The system measures latency to all endpoints, caches results for 5 minutes, and
          automatically falls back to healthy nodes if the primary fails.
        </p>
        <div class="mt-4 flex gap-4">
          <a href="/blockchain" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View Sensor Dashboard →</a>
          <a href="/opendata" class="text-blue-600 hover:text-blue-800 text-sm font-medium">Open Data →</a>
        </div>
      </div>
    </main>

    <Footer />

    <script define:vars={{ rpcEndpoints }}>
      const endpoints = rpcEndpoints;
      let autoRefresh = true;
      let refreshInterval;

      async function checkEndpoint(url, index) {
        const statusDot = document.querySelector(`[data-status-dot="${index}"]`);
        const heightEl = document.querySelector(`[data-height="${index}"]`);
        const latencyEl = document.querySelector(`[data-latency="${index}"]`);
        const statusBadge = document.querySelector(`[data-status-badge="${index}"]`);
        const scoreEl = document.querySelector(`[data-score="${index}"]`);
        const providerEl = document.querySelector(`[data-provider="${index}"]`);

        const start = Date.now();

        try {
          const controller = new AbortController();
          const timeout = setTimeout(() => controller.abort(), 5000);

          const response = await fetch(url, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              jsonrpc: '2.0',
              id: Date.now(),
              method: 'eth_blockNumber',
              params: []
            }),
            signal: controller.signal
          });

          clearTimeout(timeout);

          if (!response.ok) throw new Error('HTTP error');

          const data = await response.json();
          const latency = Date.now() - start;
          const blockNumber = parseInt(data.result, 16);

          // Update UI
          heightEl.textContent = blockNumber.toLocaleString();
          latencyEl.textContent = `${latency}ms`;
          latencyEl.className = `font-mono ${latency < 200 ? 'text-green-600' : latency < 500 ? 'text-yellow-600' : 'text-red-600'}`;

          // Status
          if (latency < 200) {
            statusDot.className = 'status-dot status-online';
            statusBadge.textContent = 'Fast';
            statusBadge.className = 'px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800';
          } else if (latency < 500) {
            statusDot.className = 'status-dot status-slow';
            statusBadge.textContent = 'OK';
            statusBadge.className = 'px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800';
          } else {
            statusDot.className = 'status-dot status-slow';
            statusBadge.textContent = 'Slow';
            statusBadge.className = 'px-2 py-1 rounded-full text-xs font-medium bg-orange-100 text-orange-800';
          }

          // Score (inverse of latency, max 100)
          const score = Math.max(0, Math.min(100, Math.round(100 - (latency / 10))));
          scoreEl.textContent = score;
          scoreEl.className = `font-bold ${score > 80 ? 'text-green-600' : score > 50 ? 'text-yellow-600' : 'text-red-600'}`;

          // Provider name from URL
          const hostname = new URL(url).hostname;
          providerEl.textContent = hostname;

          return { url, latency, blockNumber, online: true };

        } catch (error) {
          const latency = Date.now() - start;

          statusDot.className = 'status-dot status-offline';
          heightEl.textContent = '-';
          latencyEl.textContent = 'Timeout';
          latencyEl.className = 'font-mono text-red-600';
          statusBadge.textContent = 'Offline';
          statusBadge.className = 'px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800';
          scoreEl.textContent = '0';
          scoreEl.className = 'font-bold text-red-600';

          const hostname = new URL(url).hostname;
          providerEl.textContent = hostname;

          return { url, latency: Infinity, blockNumber: 0, online: false };
        }
      }

      async function refreshAll() {
        const refreshBtn = document.getElementById('refresh-btn');
        const refreshIcon = document.getElementById('refresh-icon');

        refreshBtn.disabled = true;
        refreshIcon.classList.add('refresh-spin');

        const results = await Promise.all(
          endpoints.map((url, index) => checkEndpoint(url, index))
        );

        // Get reference block height - prefer INAN (fastest), fallback to jibchain.net, then max
        const inanResult = results.find(r => r.url.includes('inan.in.th') && r.online);
        const jibchainResult = results.find(r => r.url.includes('jibchain.net') && r.online);
        const referenceResult = inanResult || jibchainResult || results.find(r => r.online);
        const referenceBlock = referenceResult?.blockNumber || Math.max(...results.filter(r => r.online).map(r => r.blockNumber));

        // Mark reference endpoint
        if (referenceResult) {
          const refIndex = endpoints.indexOf(referenceResult.url);
          if (refIndex >= 0) {
            const providerEl = document.querySelector(`[data-provider="${refIndex}"]`);
            if (providerEl) {
              providerEl.innerHTML = `${new URL(referenceResult.url).hostname} <span class="text-blue-500 text-xs">(reference)</span>`;
            }
          }
        }

        // Check for broken/behind endpoints (more than 10 blocks behind)
        results.forEach((result, index) => {
          if (result.online && referenceBlock > 0) {
            const blocksBehind = referenceBlock - result.blockNumber;
            const statusDot = document.querySelector(`[data-status-dot="${index}"]`);
            const statusBadge = document.querySelector(`[data-status-badge="${index}"]`);
            const heightEl = document.querySelector(`[data-height="${index}"]`);

            if (blocksBehind > 10) {
              // Behind - mark as broken/syncing
              statusDot.className = 'status-dot status-offline';
              statusBadge.textContent = `Behind -${blocksBehind}`;
              statusBadge.className = 'px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800';
              heightEl.innerHTML = `${result.blockNumber.toLocaleString()} <span class="text-red-500 text-xs">(-${blocksBehind})</span>`;
            } else if (blocksBehind > 3) {
              // Slightly behind
              statusBadge.textContent = `Syncing -${blocksBehind}`;
              statusBadge.className = 'px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800';
              heightEl.innerHTML = `${result.blockNumber.toLocaleString()} <span class="text-yellow-500 text-xs">(-${blocksBehind})</span>`;
            }
          }
        });

        // Update stats
        const online = results.filter(r => r.online).length;
        const synced = results.filter(r => r.online && (referenceBlock - r.blockNumber) <= 3).length;
        const heights = results.filter(r => r.online).map(r => r.blockNumber);
        const latencies = results.filter(r => r.online).map(r => r.latency);

        document.getElementById('stat-online').textContent = `${synced}/${endpoints.length}`;
        document.getElementById('stat-block').textContent = heights.length ? Math.max(...heights).toLocaleString() : '-';
        document.getElementById('stat-fastest').textContent = latencies.length ? `${Math.min(...latencies)}ms` : '-';
        document.getElementById('stat-avg').textContent = latencies.length ? `${Math.round(latencies.reduce((a,b) => a+b, 0) / latencies.length)}ms` : '-';

        refreshBtn.disabled = false;
        refreshIcon.classList.remove('refresh-spin');
      }

      // Initial load
      refreshAll();

      // Auto-refresh toggle
      document.getElementById('auto-refresh').addEventListener('change', (e) => {
        autoRefresh = e.target.checked;
        if (autoRefresh) {
          refreshInterval = setInterval(refreshAll, 10000);
        } else {
          clearInterval(refreshInterval);
        }
      });

      // Manual refresh
      document.getElementById('refresh-btn').addEventListener('click', refreshAll);

      // Start auto-refresh
      refreshInterval = setInterval(refreshAll, 10000);
    </script>
  </body>
</html>
