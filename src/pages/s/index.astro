---
// src/pages/s/index.astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllAliases } from '../../config/aliases.config';

const aliases = getAllAliases();
---

<BaseLayout title="FloodBoy Store Directory">
  <div class="container mx-auto p-4 max-w-6xl">
    <h1 class="text-3xl font-bold mb-2">FloodBoy Store Directory</h1>
    <p class="text-gray-600 mb-8">Quick access to all FloodBoy sensor stores</p>
    
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      {aliases.map(alias => (
        <a 
          href={`/s/${alias.alias}`}
          class="block p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-50 transition-colors"
        >
          <h2 class="text-xl font-semibold mb-2">{alias.displayName}</h2>
          <p class="text-sm text-gray-600 mb-3">/{alias.alias}</p>
          <div class="text-xs font-mono text-gray-500">
            {alias.address.slice(0, 6)}...{alias.address.slice(-4)}
          </div>
          <div class="text-xs text-gray-500 mt-2">
            Chain ID: {alias.chainId}
          </div>
        </a>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <a 
        href="/blockchain" 
        class="text-blue-600 hover:underline"
      >
        View all blockchain stores â†’
      </a>
    </div>
  </div>
</BaseLayout>